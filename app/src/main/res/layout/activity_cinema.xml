<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cinema_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listBackground_openSource"
    tools:context="com.cinebrah.cinebrah.activities.CinemaActivity">

    <FrameLayout
        android:id="@+id/back_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/player_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/layout_cinema_other_views"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/player_container" />

</RelativeLayout>
